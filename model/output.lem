val printf: (Cty.ctype -> (*Cty.ctype -> *)Mem.mem_value -> Mem.memM (either Errors.error (Undefined.t Core.value))) ->
            list char -> list (Cty.ctype * Mem.pointer_value) -> Mem.memM (either Errors.error (Undefined.t (list char)))
let printf eval_conv frmt args =
  match parse format frmt with
    | [(fs, [])] ->
        printf_aux eval_conv [] fs args
    | _ ->
        Mem.return $
          Right (U.undef (Loc.other "printf()") [U.Invalid_format (String.toString frmt)])
  end


val     store_chars_in_array: Mem.pointer_value -> list char -> Mem.memM unit
let rec store_chars_in_array ptrval = function
  | [] ->
      Mem.bind (Mem.store (Loc.other "snprintf()") Cty.char false ptrval
                  (Mem.integer_value_mval AilTypes.Char (Mem.integer_ival 0))) begin fun _ ->
        Mem.return ()
      end
  | c::cs ->
      let c_mval =
        Mem.integer_value_mval AilTypes.Char
          (Mem.integer_ival (Decode.decode_character_constant (Decode.escaped_char c))) in
      (* TODO: maybe needs to be unsigned char *)
      Mem.bind (Mem.store (Loc.other "snprintf()") Cty.char false ptrval c_mval) begin fun _ ->
        let ptrval' = Mem.array_shift_ptrval ptrval Cty.char (Mem.integer_ival 1) in
        store_chars_in_array ptrval' cs
      end
end


(* STD §7.21.6.5 *)
val snprintf: (Cty.ctype -> (*Cty.ctype -> *)Mem.mem_value -> Mem.memM (either Errors.error (Undefined.t Core.value))) ->
              Mem.pointer_value -> Mem.integer_value -> list char -> list (Cty.ctype * Mem.pointer_value) ->
              Mem.memM (either Errors.error (Undefined.t integer))
let snprintf eval_conv s_ptrval n_ival frmt args =
  let n = Mem.case_integer_value n_ival
    (fun n -> n)
    (fun () -> error "TODO: snprintf(), symbolic value for the size n") in
  (* TODO: overlap undefined behaviour *)
  if n = 0 then
    Mem.return (Right (U.return 0))
  else match parse format frmt with
    | [(fs, [])] ->
        printf_aux eval_conv [] fs args >>= function
          | Right (U.Defined cs) ->
              let cs' = List.take (natFromInteger (n-1)) cs in
              Mem.bind (store_chars_in_array s_ptrval cs') begin fun () ->
                Mem.return (Right (U.return (integerFromNat (List.length cs'))))
              end
          | _ ->
              error "TODO: snprintf()"
        end
    | _ ->
        Mem.return $
          Right (U.undef (Loc.other "snprintf()") [U.Invalid_format (String.toString frmt)])
  end


(* STD §7.21.6.6 *)
val sprintf: (Cty.ctype -> (*Cty.ctype -> *)Mem.mem_value -> Mem.memM (either Errors.error (Undefined.t Core.value))) ->
