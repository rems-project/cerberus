let inline mapM_ = nd_mapM_


(* NOTE: this is foldl *)
val     foldlM: forall 'a 'b 'err 'cs 'st. ('a -> 'b -> ndM 'a 'err 'cs 'st) -> 'a -> list 'b -> ndM 'a 'err 'cs 'st (* GENERIC Monad *)
let rec foldlM f a = function                                                 (* GENERIC Monad *)
  | [] ->                                                                    (* GENERIC Monad *)
      return a                                                               (* GENERIC Monad *)
  | x::xs ->                                                                 (* GENERIC Monad *)
      f a x >>= fun fax -> foldlM f fax xs                                    (* GENERIC Monad *)
end



(* Non-deterministically pick from a list *)
val pick: forall 'a 'err 'cs 'st. Constraints 'cs => string -> list 'a -> ndM 'a 'err 'cs 'st
let pick debug_str = function
  | [] ->
      error ("ND2.pick(" ^ debug_str ^ "), empty list")
  | [x] ->
      ND (fun st ->
        (NDactive x, st)
      )
  | x::xs ->
      let () = Debug.print_debug 1 [] (fun () ->
        "ND2.pick (|ms| = " ^ show (List.length (x::xs)) ^ ")"
      ) in
      ND (fun st ->
        (NDnd debug_str (("", return x) :: List.map (fun z -> ("", return z)) xs), st)
      )
end


