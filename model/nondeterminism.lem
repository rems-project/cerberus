val liftND: forall 'a 'err1 'err2 'cs 'st1 'st2.
  ('st2 -> 'st1) ->
  ('st2 -> 'st1 -> 'st2) ->
  ('err1 -> 'err2) ->
  ndM 'a 'err1 'cs 'st1 -> ndM 'a 'err2 'cs 'st2

let rec liftAction get put liftErr = function
  | NDactive a ->
      NDactive a
  | NDkilled r ->
      NDkilled match r with
        | Undef loc ubs ->
            Undef loc ubs
        | Error loc str ->
            Error loc str
        | Other err ->
            Other (liftErr err)
      end
  | NDnd debug_str str_ms ->
      NDnd debug_str (List.map (fun (str, m_act) -> (str, liftND get put liftErr m_act)) str_ms)
  | NDguard debug_str cs act ->
      NDguard debug_str cs (liftND get put liftErr act)
  | NDbranch debug_str cs m_act1 m_act2 ->
      NDbranch debug_str cs (liftND get put liftErr m_act1) (liftND get put liftErr m_act2)
  | NDstep str_ms ->
      NDstep (List.map (fun (str, m) -> (str, liftND get put liftErr m)) str_ms)
end

and liftND get put liftErr (ND m) =
  ND (fun st2 ->
    let (act, st1') = m (get st2) in
    (liftAction get put liftErr act, put st2 st1')
  )



let mk_step _ xs =
  ND (fun st -> (NDstep xs, st))





