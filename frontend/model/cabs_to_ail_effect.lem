val check_cn_ident: Cn.cn_namespace -> Symbol.identifier -> desugM bool
let check_cn_ident ns _ident =
  match ns with
  | Cn.CN_predicate ->
    return true (* global *)
  | Cn.CN_function ->
    return true (* global *)
  | Cn.CN_lemma ->
    return true (* global *)
  | Cn.CN_vars ->
