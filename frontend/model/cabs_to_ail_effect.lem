  end >>
  determinate_linkage ident Namespace_ordinary kind storage_classes >>= fun link ->
  internal_register_identifier (fun (scope, (sym, prev_kind, prev_link_opt)) do_fresh ->
    match link with
      | Linkage_external ->
          (* STD §6.2.2#7 *)
